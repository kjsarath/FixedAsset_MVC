
@{
    ViewBag.Title = "Index";
}

<h2>Login</h2>

<div id="content" ng-controller="LoginController">
    <div>{{message}}</div>
    <hr />
    <div>
        <input type="text" ng-model="username" name="username" />
        <input type="text" ng-model="password" name="password" />
    </div>
    <div class="btn">
        <input type="submit" value="LogIn" ng-click="getUser()" >
    </div>
</div>


@section JavaScript{
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/ScriptsNg/Controllers/LoginController.js"></script>
}